<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fons"
    tools:context=".ListOfChampsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="145dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp" />

    <EditText
        android:id="@+id/searchInputLayout"
        android:layout_width="199dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/gold"
        android:fontFamily="@font/lol"
        android:hint="Search"
        android:textColor="@color/gold"
        android:textColorHint="@color/gold"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageButton
        android:id="@+id/champ_button"
        android:layout_width="117dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:background="@android:color/transparent"
        android:src="@drawable/champ_text_high"
        app:layout_constraintEnd_toStartOf="@+id/item_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />


    <ImageButton
        android:id="@+id/item_button"
        android:layout_width="117dp"
        android:layout_height="27dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:src="@drawable/item_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/champ_button"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <ImageButton
        android:id="@+id/favIcon"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/fav_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/config"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/config"
        app:layout_constraintEnd_toStartOf="@+id/favIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/sort"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/sort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favIcon" />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="42dp"
        android:layout_height="34dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/search"
        app:layout_constraintStart_toEndOf="@+id/searchInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="258dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lol_bold"
        android:gravity="center"
        android:text="LEAGUE CHAMPS"
        android:textColor="@color/gold"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/config"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>