<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fons">

    <ImageButton
        android:id="@+id/goBack"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/goback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleL"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/lol_bold"
        android:gravity="center"
        android:text="Language"
        android:textColor="@color/gold"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/language"
        app:layout_constraintEnd_toStartOf="@+id/titleV"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/language"
        android:layout_width="200dp"
        android:layout_height="30dp"

        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/done"
        app:layout_constraintEnd_toStartOf="@+id/versions"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleL" />

    <TextView
        android:id="@+id/titleV"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/lol_bold"
        android:gravity="center"
        android:text="Version"
        android:textColor="@color/gold"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/versions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/titleL"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/versions"
        android:layout_width="200dp"
        android:layout_height="30dp"

        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/language"
        app:layout_constraintTop_toBottomOf="@+id/titleV" />

    <ImageButton
        android:id="@+id/done"
        android:layout_width="128dp"
        android:layout_height="62dp"
        android:layout_marginBottom="64dp"
        android:background="@android:color/transparent"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@drawable/boto_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>