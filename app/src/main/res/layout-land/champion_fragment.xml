<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fons"
    tools:context=".ui.views.ChampionFragment">

    <ImageButton
        android:id="@+id/goBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/goback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/favIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:src="@drawable/fav_false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goBack" />

    <ProgressBar
        android:id="@+id/attack"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="234dp"
        android:layout_height="6dp"
        android:layout_marginEnd="176dp"
        android:max="10"
        android:progress="8"
        android:progressBackgroundTint="@color/blue_black"
        android:progressTint="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/defense"
        app:layout_constraintEnd_toStartOf="@+id/tag1"
        app:layout_constraintTop_toBottomOf="@+id/spells" />

    <ProgressBar
        android:id="@+id/defense"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="234dp"
        android:layout_height="6dp"
        android:layout_marginEnd="176dp"
        android:max="10"
        android:progress="4"
        android:progressBackgroundTint="@color/blue_black"
        android:progressTint="@color/green"
        app:layout_constraintBottom_toTopOf="@+id/magic"
        app:layout_constraintEnd_toStartOf="@+id/tag1"
        app:layout_constraintTop_toBottomOf="@+id/attack" />

    <ProgressBar
        android:id="@+id/magic"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="234dp"
        android:layout_height="6dp"
        android:layout_marginEnd="176dp"
        android:max="10"
        android:progress="3"
        android:progressBackgroundTint="@color/blue_black"
        android:progressTint="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/difficulty"
        app:layout_constraintEnd_toStartOf="@+id/tag2"
        app:layout_constraintTop_toBottomOf="@+id/defense" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="118dp"
        android:layout_height="119dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/base"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lol_bold"
        android:text="Aatrox"
        android:textColor="@color/grey"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tag2"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag1" />

    <ImageView
        android:id="@+id/tag1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lore" />

    <TextView
        android:id="@+id/lore"
        android:layout_width="488dp"
        android:layout_height="136dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lol"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="Once honored defenders of Shurima against the Void, Aatrox and his brethren would eventually become an even greater threat to Runeterra, and were defeated only by cunning mortal sorcery. But after centuries of imprisonment, Aatrox was the first to find freedom once more, corrupting and transforming those foolish enough to try and wield the magical weapon that contained his essence. Now, with stolen flesh, he walks Runeterra in a brutal approximation of his previous form, seeking an apocalyptic and long overdue vengeance."
        android:textColor="@color/grey"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/lol"
        android:text="the Darkin Blade"
        android:textColor="@color/grey"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/attackValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lol"
        android:gravity="center"
        android:text="4/10"
        android:textColor="@color/gold"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/attack"
        app:layout_constraintEnd_toEndOf="@+id/attack" />

    <TextView
        android:id="@+id/defenceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lol"
        android:gravity="center"
        android:text="4/10"
        android:textColor="@color/gold"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/defense"
        app:layout_constraintEnd_toEndOf="@+id/defense" />

    <TextView
        android:id="@+id/magicValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lol"
        android:gravity="center"
        android:text="4/10"
        android:textColor="@color/gold"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/magic"
        app:layout_constraintEnd_toEndOf="@+id/magic" />

    <TextView
        android:id="@+id/difficultyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lol"
        android:gravity="center"
        android:text="4/10"
        android:textColor="@color/gold"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/difficulty"
        app:layout_constraintEnd_toEndOf="@+id/difficulty" />

    <ProgressBar
        android:id="@+id/difficulty"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="234dp"
        android:layout_height="6dp"
        android:layout_marginEnd="176dp"
        android:max="10"
        android:progress="4"
        android:progressBackgroundTint="@color/blue_black"
        android:progressTint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tag2"
        app:layout_constraintTop_toBottomOf="@+id/magic" />

    <TextView
        android:id="@+id/attackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/lol_bold"
        android:gravity="center"
        android:text="Attack"
        android:textColor="@color/grey"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/defenceText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spells" />

    <TextView
        android:id="@+id/defenceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/lol_bold"
        android:gravity="center"
        android:text="Defence"
        android:textColor="@color/grey"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/magicText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attackText" />

    <TextView
        android:id="@+id/magicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/lol_bold"
        android:gravity="center"
        android:text="Magic"
        android:textColor="@color/grey"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/difficultyText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defenceText" />

    <TextView
        android:id="@+id/difficultyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/lol_bold"
        android:gravity="center"
        android:text="Difficulty"
        android:textColor="@color/grey"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/magicText" />

    <ImageButton
        android:id="@+id/skins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/boto_skins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <ImageButton
        android:id="@+id/spells"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/boto_spells"
        app:layout_constraintStart_toEndOf="@+id/skins"
        app:layout_constraintTop_toBottomOf="@+id/icon" />
</androidx.constraintlayout.widget.ConstraintLayout>